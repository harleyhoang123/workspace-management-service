<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="OFF">

    <Properties>
        <Property name="LOG_LOC">logs</Property>
        <Property name="MAX">5</Property>
        <Property name="LOG_PATTERN">%d{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M - %msg%n
        </Property>
    </Properties>

    <Appenders>
        <RollingFile name="FILE" fileName="${LOG_LOC}/main.log"
                     filePattern="${LOG_LOC}/main.%i.log">
            <PatternLayout>
                <Pattern>${LOG_PATTERN}</Pattern>
            </PatternLayout>

            <Policies>
                <OnStartupTriggeringPolicy />
            </Policies>

            <DefaultRolloverStrategy max="${MAX}" />
        </RollingFile>

        <Console name="STDOUT" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}" />
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="com.roytuts" level="debug" />

        <Logger name="org.springframework.web" level="info"
                additivity="false" />

        <Logger name="file" level="debug" additivity="false">
            <appender-ref ref="FILE" />
        </Logger>

        <Root level="INFO">
            <AppenderRef ref="FILE" />
            <AppenderRef ref="STDOUT" />
        </Root>
    </Loggers>

</Configuration>
